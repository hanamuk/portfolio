<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_loginfail"
    android:layout_width="700dp"
    android:layout_height="500dp"
    tools:context=".LoginFailPopup"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_popup_shadow"></ImageView>


        <RelativeLayout
            android:layout_width="670dp"
            android:layout_height="440dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_popup"
                tools:ignore="MissingConstraints"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/popup"
                android:layout_alignTop="@+id/popup"
                android:layout_alignRight="@+id/popup"
                android:layout_marginTop="200dp"
                android:gravity="center_horizontal"
                android:text="로그인 정보가 올바르지 않습니다. \n 확인 후 다시 시도하십시오"
                android:textColor="#6a6a6a"
                android:textSize="30sp"></TextView>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/popup"
                android:layout_alignRight="@+id/popup"
                android:layout_alignBottom="@id/popup"
                android:adjustViewBounds="true"
                android:onClick="okBtnPressed"
                android:src="@drawable/btn_popup_ok"></ImageView>

        </RelativeLayout>

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>